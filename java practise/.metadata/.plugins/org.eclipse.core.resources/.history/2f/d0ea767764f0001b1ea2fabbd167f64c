package ex1;

import sun.security.provider.ConfigFile.Spi;

public class Palindrome {

	public static void main(String[] args) {
		String s="hi this is karthik";
		System.out.println(lastCharUppercase(s));

	}
	
	public static StringBuilder lastCharUppercase(String s){
		StringBuilder sb=new StringBuilder();
		String[] str=s.split(" ");
		for (int i=0;i<=str.length;i++) {
			sb.append(str[i].substring(0,str[i].length()-1)).append(Character.toUpperCase(str[i].charAt(str[i].length()-1)));
			sb.toString();
		}
		return sb;
	}
	

}
